#
# .zshrc
#   Zshell configurations
#

export ZSH="$HOME/.oh-my-zsh"

set plugins (
    git
)

# Set-up icons for files/directories in terminal using lsd
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

set HISTFILE ~/.zsh_history
set HISTSIZE 10000
set SAVEHIST 10000
